@using Microsoft.AspNetCore.Identity
@model IEnumerable<UserRoles.Models.Users>

@{
    ViewData["Title"] = "Les CV des utilisateurs";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-person-lines-fill"></i> @ViewData["Title"]</h2>
        <p class="text-muted mb-0">Consultez les profils disponibles sur la plateforme.</p>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm border rounded">
            <thead class="table-light">
                <tr>
                    <th><i class="bi bi-person-fill"></i> Nom complet</th>
                    <th><i class="bi bi-envelope-fill"></i> Email</th>
                    <th><i class="bi bi-calendar-event-fill"></i> Date de création</th>
                    <th><i class="bi bi-tools"></i> Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("UserCvDetails", "Home", new { userId = user.Id })" class="text-decoration-none fw-semibold">
                                <i class="bi bi-person-badge-fill text-primary me-1"></i> @user.FullName
                            </a>
                        </td>
                        <td><i class="bi bi-envelope-open text-secondary me-1"></i> @user.Email</td>
                        <td><span class="badge bg-secondary">@user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span></td>
                        <td>
                            <a href="mailto:@user.Email" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-envelope-arrow-up"></i> Contacter
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
