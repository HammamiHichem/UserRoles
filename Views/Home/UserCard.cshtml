@model UserProfileViewModel
@{
    ViewData["Title"] = "Fiche utilisateur";
}

<div class="card shadow-lg p-4 mb-5 bg-white rounded">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@Model.ProfilePictureUrl" alt="Photo de profil" class="img-thumbnail" style="max-width: 200px;" />
        </div>
        <div class="col-md-8">
            <h3>@Model.FullName</h3>
            <p><strong>Téléphone :</strong> @Model.PhoneNumber</p>
            <p><strong>Adresse :</strong> @Model.Address</p>
            <h5>Compétences</h5>
            <ul>
                @foreach (var skill in Model.SelectedSkills)
                {
                    <li>@skill</li>
                }
            </ul>

            @if (!string.IsNullOrEmpty(Model.CvPdfUrl))
            {
                <p><a href="@Model.CvPdfUrl" target="_blank" class="btn btn-outline-secondary">Voir le CV</a></p>
            }
        </div>
    </div>
</div>
