@model UserRoles.ViewModels.EditUserRolesViewModel

@{
    ViewData["Title"] = "Modifier les rôles de l'utilisateur";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditUserRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    
    <div class="form-group">
        <label>Email : @Model.UserEmail</label>
    </div>

    <div class="form-group">
        <label>Rôles :</label><br />
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox"
                       asp-for="Roles[i].IsSelected"
                       value="true" />
                <input type="hidden" asp-for="Roles[i].RoleName" />
                <label class="form-check-label">@Model.Roles[i].RoleName</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>
